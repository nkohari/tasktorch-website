.product
  background-image: url('~images/backgrounds/maze.png')
  background-size: 46px 23px
  
  header
    position: relative
    min-height: 100vh
    background: url('~images/people.jpg')
    background-size: cover
    background-position: bottom
    background-repeat: no-repeat
    font-size: 2.4rem
    display: flex
    flex-direction: column
    justify-content: flex-end
    align-items: center
    padding-bottom: 60px
    
    h2
      position: relative
      margin: 0
      font-size: 3rem
      line-height: 3.4rem
      font-weight: $font-weight-heavy
      color: $color-white
      text-align: center
      text-shadow: 0 2px 3px black(70%)
      z-index: 1
    
    .cta
      position: relative
      z-index: 1
      text-align: center
      padding-top: 50px
    
    .gradient
      position: absolute
      left: 0
      bottom: 0
      width: 100%
      height: 100%
      background: linear-gradient(to bottom, black(50%) 0%, black(10%) 50%, black(50%) 100%)
      z-index: 0

  main
    position: relative
    z-index: 2
    width: 100%
