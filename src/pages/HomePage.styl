.home-page
  background: url('~images/backgrounds/confusion.jpg')
  
  main
    position: relative
    z-index: 2
    min-height: calc(100vh - 354px)
    margin: 30px 0
    display: flex
    flex-direction: column
    align-items: center

    .video
      width: 70vw
      min-width: 600px
      background: $color-black
      box-shadow: 0 0 100px white(30%)
      border: 1px solid white(30%)
    
    h2
      margin: 0 0 60px 0
      max-width: 60vw
      font-size: 3rem
      line-height: 3.4rem
      font-weight: $font-weight-heavy
      color: $color-white
      text-align: center
      text-shadow: 0 2px 2px black(80%)
    
    h3
      margin: 40px 0 0 0
      max-width: 60vw
      font-size: 1.4rem
      line-height: 1.8rem
      font-weight: $font-weight-normal
      color: $color-white
      text-align: center
      text-shadow: 0 2px 2px black(80%)
      
    .cta
      margin: 30px 0
  
  footer
    position: relative
    z-index: 1
    bottom: 0
    width: 100%
