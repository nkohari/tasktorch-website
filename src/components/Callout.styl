.callout
  position: absolute
  background: $color-white
  box-shadow: 0 0 30px black(50%)
  overflow: hidden
  cursor: pointer
  transition: all 300ms ease-out
  
  &.zoomed
    position: fixed
    top: 0
    left: 0
    z-index: 100
    width: 100% !important
    height: 100% !important
    border-radius: 0px !important
  
  &.fade-enter { animation: callout-slide-up   600ms ease-out }
  &.fade-leave { animation: callout-slide-down 200ms linear }

  &.spotlight
    height: 370px
    width: 370px
    border: 5px solid $color-white
    border-radius: 50%

  &.wide
    height: 400px
    width: 740px
    border-radius: 2px
    border: 1px solid $color-mediumgray

@keyframes callout-slide-up
  from
    transform: translateY(400px)
  to
    transform: translateY(0px)

@keyframes callout-slide-down
  from
    transform: translateY(0px)
  to
    transform: translateY(400px)
