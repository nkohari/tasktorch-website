.splash
  position: fixed
  top: 0
  z-index: 0
  width: 100%
  height: 800px
  min-width: 800px
  background: url('~images/splash.jpg')
  background-position: left bottom
  background-size: cover
  
  .banner
    position: fixed
    top: 320px
    width: 100%
    text-align: center
    tween(500ms)
    /body.scroll-mark-one &
      top: 100px
    /body.scroll-mark-two &
      top: 0px
      opacity: 0
    
    h2:nth-child(1)
      font-size: 48px
      font-weight: $font-weight-bold
      margin: 0 0 32px 0
      color: $color-white
      text-shadow: 0 2px 2px black(80%)
      tween(400ms)
      /body.scroll-mark-one &, /body.scroll-mark-two &
        transform: translateY(-100px)
        opacity: 0
    
    h2:nth-child(2)
      font-size: 64px
      font-weight: $font-weight-bold
      margin: 0 0 60px 0
      color: $color-brand-orange
      text-shadow: 0 2px 2px black(80%)
      tween(500ms)
      /body.scroll-mark-one &, /body.scroll-mark-two &
        transform: translateY(-100px)
        opacity: 0

    h3:nth-child(3)
      font-size: 28px
      font-weight: $font-weight-normal
      margin: 0 0 12px 0
      color: $color-white
      text-shadow: 0 2px 2px black(80%)

    h3:nth-child(4)
      font-size: 28px
      font-weight: $font-weight-normal
      margin: 0 0 30px 0
      color: $color-white
      text-shadow: 0 2px 2px black(80%)
