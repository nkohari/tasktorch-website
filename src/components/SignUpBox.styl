.signup
  padding: 140px 0
  font-size: 24px
  text-align: center
  background: $color-verydarkgray url('~images/bg.png')
  
  p
    margin: 0 0 12px 0
  
  input
    display: inline-block
    font-size: 24px
    color: $color-white
    width: 400px
    background: $color-black
    border: 2px solid $color-gray
    border-radius: 4px
    padding: 8px 12px
    outline: none !important
    &:focus
      border-color: $color-lightgray
  
  form
    margin-top: 32px
    display: flex
    justify-content: center

  .button
    margin-left: 20px
  
  .thanks
    margin: 40px auto 0 auto
    background: $color-black
    border: 3px solid $color-white
    border-radius: 10px
    padding: 20px
    width: 600px
