.slideshow
  text-align: center
  
  &.focus
    .backdrop { background-image: url('~images/backdrop-focus.png') }
    
  &.bigpicture
    .backdrop { background-image: url('~images/backdrop-bigpicture.png') }
    
  .nav
    position: absolute
    background: $color-gray
    box-shadow: 0 0 10px black(30%)
    border-radius: 50%
    height: 90px
    width: 90px
    top: 190px
    cursor: pointer
    tween(150ms)
    &:hover
      transform: scale(1.1)
    &.prev
      left: -45px
    &.next
      right: -45px
  
  .top
    padding-top: 20px
    background: linear-gradient(to bottom, $color-black, $color-gray)
  
  h2
    margin: 20px 0
    width: 100%
    font-size: 36px
    font-weight: $font-weight-heavy
    text-shadow: 0 1px 2px black(70%)
    
  .chiclets
    margin-bottom: 20px
    .chiclet
      display: inline-block
      height: 10px
      width: 10px
      margin-right: 10px
      border: 1px solid $color-white
      border-radius: 50%
      cursor: pointer
      &.selected { background: $color-white }
      &:last-child { margin-right: 0 }
  
  .frame
    position: relative
    z-index: 0
    width: 900px
    margin: 0 auto
  
  .backdrop
    position: relative
    width: 900px
    height: 473px
    background-size: 100% auto
    background-position: center
    background-repeat: no-repeat
    overflow: hidden
      
  .bottom
    position: relative
    z-index: 1
    top: -44px
    padding-top: 40px
    background: $color-black
    box-shadow: 0 0 30px black(50%)
    text-align: left
    
    .caption
      position: relative
      width: 900px
      height: 220px
      margin: 0 auto
