.slideshow
  text-align: center
  
  &.focus
    .graphic { background-image: url('~images/mock-screenshot-focus.png') }
  &.bigpicture
    .graphic { background-image: url('~images/mock-screenshot-bigpicture.png') }
  
  .top
    padding-top: 20px
    background: linear-gradient(to bottom, $color-black, $color-gray)
  
  h2
    margin-top: 40px
    margin-bottom: 20px
    width: 100%
    font-size: 36px
    font-weight: $font-weight-heavy
    text-shadow: 0 1px 2px black(70%)
    
  .chiclets
    margin-bottom: 20px
    .chiclet
      display: inline-block
      height: 10px
      width: 10px
      margin-right: 10px
      border: 1px solid $color-white
      border-radius: 50%
      &.selected { background: $color-white }
      &:last-child { margin-right: 0 }
  
  .graphic
    position: relative
    z-index: 0
    width: 970px
    height: 505px
    margin: 0 auto
    background-position: center
    background-repeat: no-repeat
    
    .callout
      position: absolute
      top: 45px
      left: 100px
      height: 380px
      width: 380px
      border-radius: 50%
      background: $color-white
      box-shadow: 0 0 30px black(20%)

  .caption
    position: relative
    z-index: 1
    top: -50px
    height: 400px
    padding: 20px 0
    background: $color-black
    box-shadow: 0 0 30px black(50%)
    text-align: center
