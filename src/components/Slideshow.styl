.slideshow
  text-align: center
  
  &.focus
    .backdrop { background-image: url('~images/backdrop-focus.png') }
    
  &.bigpicture
    .backdrop { background-image: url('~images/backdrop-bigpicture.png') }
    
  .nav
    position: absolute
    background: $color-white
    box-shadow: 0 0 10px black(30%)
    border-radius: 50%
    height: 100px
    width: 100px
    top: 170px
    cursor: pointer
    tween(150ms)
    &:hover
      box-shadow: 0 0 20px black(30%)
    &.prev
      left: -50px
      &:hover
        transform: scale(1.1)
    &.next
      right: -50px
      &:hover
        transform: scale(1.1)
  
  .top
    padding-top: 20px
    background: linear-gradient(to bottom, $color-black, $color-gray)
  
  h2
    margin-top: 20px
    margin-bottom: 40px
    width: 100%
    font-size: 36px
    font-weight: $font-weight-heavy
    text-shadow: 0 1px 2px black(70%)
    
  .chiclets
    margin-bottom: 20px
    .chiclet
      display: inline-block
      height: 10px
      width: 10px
      margin-right: 10px
      border: 1px solid $color-white
      border-radius: 50%
      cursor: pointer
      &.selected { background: $color-white }
      &:last-child { margin-right: 0 }
  
  .backdrop
    position: relative
    z-index: 0
    width: 970px
    height: 473px
    margin: 0 auto
    background-position: center
    background-repeat: no-repeat
    
    .callout
      position: absolute
      border: 5px solid $color-white
      background: $color-white
      box-shadow: 0 0 30px black(50%)
      overflow: hidden
      &.fade-enter { animation: spotlight-fade-in  500ms ease }
      &.fade-leave { animation: spotlight-fade-out 500ms ease }
    
      &.spotlight
        height: 370px
        width: 370px
        border-radius: 50%

      &.wide
        height: 338px
        width: 600px
        border-radius: 2px
      
  .bottom
    position: relative
    z-index: 1
    top: -44px
    padding-top: 50px
    background: $color-black
    box-shadow: 0 0 30px black(50%)
    text-align: left
    
    .caption
      position: relative
      width: 970px
      height: 240px
      margin: 0 auto


@keyframes spotlight-fade-in
  from
    opacity: 0
    transform: translateY(50px)
  to
    opacity: 1
    transform: translateY(0px)

@keyframes spotlight-fade-out
  from
    opacity: 1
    transform: translateY(0px)
  to
    opacity: 0
    transform: translateY(50px)
