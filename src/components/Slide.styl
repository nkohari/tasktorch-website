.slide
  position: absolute
  width: 100%
  height: 100%
  
  &.orange
    .caption h5
      background: $color-brand-orange
  
  &.pink
    .caption h5
      background: $color-brand-pink
  
  &.blue
    .caption h5
      background: $color-brand-blue
  
  &.top
    .caption
      top: 52px
  
  &.bottom
    .caption
      top: 320px
  
  &.left
    .caption
      left: 40px
    .screenshot
      right: 80px
  
  &.right
    .caption
      right: 40px
    .screenshot
      left: 80px
  
  &.fade-enter
    animation: slide-fade-in 500ms ease
    .screenshot { animation: screenshot-slide-up 500ms ease-out }
    
  &.fade-leave
    animation: slide-fade-out 500ms ease
    .screenshot { animation: screenshot-slide-down 500ms linear }

  .screenshot
    position: absolute
    top: 20px
    height: 430px
    width: 430px
    border: 5px solid $color-white
    border-radius: 50%
    background: $color-white
    box-shadow: 0 0 30px black(50%)
    overflow: hidden
    cursor: pointer
    transition: all 300ms ease-out
    
  .caption
    position: absolute
    width: 400px
    box-shadow: 0 0 30px black(50%)
    border-radius: 10px
    
    h5
      margin: 0
      padding: 8px 12px
      color: $color-white
      font-size: 1.2rem
      font-weight: $font-weight-heavy
      text-shadow: 1px 2px 1px black(30%)
      border-top-left-radius: 10px
      border-top-right-radius: 10px

    p
      margin: 0
      padding: 12px
      color: white(87%)
      background: $color-black
      font-size: 1.2rem
      line-height: 1.3rem
      border-bottom-left-radius: 10px
      border-bottom-right-radius: 10px

@keyframes slide-fade-in
  from { opacity: 0 }
  to   { opacity: 1 }

@keyframes slide-fade-out
  from { opacity: 1 }
  to   { opacity: 0 }

@keyframes screenshot-slide-up
  from
    transform: translateY(400px)
  to
    transform: translateY(0px)

@keyframes screenshot-slide-down
  from
    transform: translateY(0px)
  to
    transform: translateY(400px)
