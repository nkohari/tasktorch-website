.slide
  position: absolute
  display: flex
  align-items: center
  
  &.fade-enter { animation: slide-fade-in  500ms ease }
  &.fade-leave { animation: slide-fade-out 500ms ease }

  .graphic
    width: 388px
    margin-left: 20px
    margin-right: 40px
    text-align: right
  
  .text
    width: 485px
    margin-left: 40px
    
    h3
      margin: 0 0 24px 0
      font-size: 28px
      font-weight: $font-weight-heavy
    
    p
      margin: 0 0 24px 0
      font-size: 24px
      line-height: 1.3em
      color: $color-lightgray

@keyframes slide-fade-in
  from { opacity: 0 }
  to   { opacity: 1 }

@keyframes slide-fade-out
  from { opacity: 1 }
  to   { opacity: 0 }
