.point
  width: 70vw
  max-width: 960px
  margin-bottom: 60px
  display: flex
  
  &.left
    text-align: left
    flex-direction: row-reverse
    .figure
      margin-left: 40px
        
  &.right
    text-align: right
    flex-direction: row
    .figure
      margin-right: 40px
  
  .figure
    width: 300px
    height: 200px

  .content
    flex: 1
    display: flex
    flex-direction: column
    justify-content: center

    h4
      margin: 0 0 1.2rem 0
      font-size: 1.8rem
      font-weight: $font-weight-bold
      text-shadow: 0 1px 2px black(70%)
    
    p
      margin: 0
      color: white(70%)
      font-size: 1.3rem
      line-height: 1.6rem

      em
        color: white(90%)